{
  "compilerOptions": {
    "strictNullChecks": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es6",
    "lib": [
      "dom",
      "es2017"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": "./packages",
    "paths": {
      "@bkui-vue/*": [
        "*/src"
      ]
    },
    "importHelpers": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noEmitOnError": true,
  },
  "include": [
    "packages/**/*",
    "site/**/*",
    "scripts/**/*",
    "./test-setup.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js",
    "*bak*"
  ]
}